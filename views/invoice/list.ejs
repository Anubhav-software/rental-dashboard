<div class="card h-100 p-0 radius-12" id="invoice-list-card" data-base-path="<%= typeof basePath !== 'undefined' ? basePath : '' %>" data-page="<%= query.page %>" data-limit="<%= query.limit %>" data-status="<%= query.status || '' %>" data-issue-date-from="<%= query.issue_date_from || '' %>" data-issue-date-to="<%= query.issue_date_to || '' %>">
    <div class="card-header border-bottom bg-base py-16 px-24 d-flex align-items-center flex-wrap gap-3 justify-content-between">
        <div class="d-flex align-items-center flex-wrap gap-3">
            <select id="invoice-filter-status" class="form-select form-select-sm w-auto ps-12 py-6 radius-12 h-40-px" title="Filter by status">
                <option value="">All status</option>
                <option value="DRAFT" <%= query.status === 'DRAFT' ? 'selected' : '' %>>Draft</option>
                <option value="ISSUED" <%= query.status === 'ISSUED' ? 'selected' : '' %>>Issued</option>
                <option value="SENT" <%= query.status === 'SENT' ? 'selected' : '' %>>Sent</option>
                <option value="PAID" <%= query.status === 'PAID' ? 'selected' : '' %>>Paid</option>
                <option value="CANCELLED" <%= query.status === 'CANCELLED' ? 'selected' : '' %>>Cancelled</option>
            </select>
            <input type="date" id="invoice-filter-issue-from" class="form-control form-control-sm w-auto py-6 radius-12 h-40-px" placeholder="Issue from" value="<%= query.issue_date_from || '' %>" title="Issue date from">
            <input type="date" id="invoice-filter-issue-to" class="form-control form-control-sm w-auto py-6 radius-12 h-40-px" placeholder="Issue to" value="<%= query.issue_date_to || '' %>" title="Issue date to">
            <button type="button" id="invoice-filter-apply" class="btn btn-sm border border-neutral-400 radius-8 h-40-px">Apply</button>
        </div>
        <div class="d-flex align-items-center gap-2">
            <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/invoice/add" class="btn btn-primary text-sm btn-sm px-12 py-12 radius-8 d-flex align-items-center gap-2">
                <iconify-icon icon="ic:baseline-plus" class="icon text-xl line-height-1"></iconify-icon>
                Create Invoice
            </a>
        </div>
    </div>
    <div class="card-body p-24">
        <div id="invoice-list-loading" class="text-center text-secondary-light py-24">Loading invoicesâ€¦</div>
        <div id="invoice-list-content" class="d-none">
            <div class="table-responsive scroll-sm">
                <table class="table bordered-table sm-table mb-0">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Invoice #</th>
                            <th scope="col">Customer</th>
                            <th scope="col">Issue date</th>
                            <th scope="col">Total</th>
                            <th scope="col" class="text-center">Status</th>
                            <th scope="col" class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody id="invoice-list-tbody">
                    </tbody>
                </table>
            </div>
            <div id="invoice-list-pagination" class="d-flex align-items-center justify-content-between mt-16 flex-wrap gap-2">
            </div>
        </div>
        <div id="invoice-list-error" class="d-none text-center text-danger py-24"></div>
    </div>
</div>

<% script = '<script src="/js/api/invoiceApi.js"></script><script src="/js/pages/invoice-list.js"></script>' %>
