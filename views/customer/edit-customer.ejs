<div class="card h-100 p-0 radius-12" id="customer-edit-root" data-customer-id="<%= typeof customerId !== 'undefined' ? customerId : '' %>" data-base-path="<%= typeof basePath !== 'undefined' ? basePath : '' %>">
    <div class="card-body p-24">
        <div id="customer-edit-loading" class="text-center text-secondary-light py-24">Loading customerâ€¦</div>
        <div id="customer-edit-error" class="d-none text-center text-danger py-24"></div>
        <div id="customer-edit-content" class="d-none">
            <div class="row justify-content-center">
                <div class="col-xxl-10 col-xl-11 col-lg-12">
                    <div class="card border radius-12 overflow-hidden">
                        <div class="card-header bg-neutral-50 border-bottom py-16 px-24">
                            <h6 class="text-md text-primary-light mb-0 d-flex align-items-center gap-2">
                                <iconify-icon icon="lucide:edit" class="text-primary-600"></iconify-icon>
                                Edit Customer
                            </h6>
                        </div>
                        <div class="card-body p-24">
                            <form id="customer-form" method="POST" action="#">

                            <!-- Part 1: Basic Information -->
                            <div class="card border radius-12 overflow-hidden mb-24">
                                <div class="card-header bg-neutral-50 border-bottom py-14 px-20">
                                    <h6 class="text-sm fw-semibold text-primary-light mb-0 d-flex align-items-center gap-2">
                                        <iconify-icon icon="solar:document-text-outline" class="text-primary-600"></iconify-icon>
                                        Basic Information
                                    </h6>
                                </div>
                                <div class="card-body p-20">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:account-outline"></iconify-icon></span>
                                                <input type="text" name="name" id="name" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Full name" value="" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:phone-outline"></iconify-icon></span>
                                                <input type="text" name="phone" id="phone" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Phone (unique)" value="" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:email-outline"></iconify-icon></span>
                                                <input type="email" name="email" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Email" value="">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:earth"></iconify-icon></span>
                                                <input type="text" name="nationality" id="nationality" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Nationality" value="" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:card-account-details-outline"></iconify-icon></span>
                                                <input type="text" name="passportNumber" id="passportNumber" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Passport number" value="" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:home-outline"></iconify-icon></span>
                                                <input type="text" name="hotelName" id="hotelName" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Hotel name" value="" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Booking / Tour details -->
                            <div class="card border radius-12 overflow-hidden mb-24">
                                <div class="card-header bg-neutral-50 border-bottom py-14 px-20">
                                    <h6 class="text-sm fw-semibold text-primary-light mb-0 d-flex align-items-center gap-2">
                                        <iconify-icon icon="mdi:calendar-check-outline" class="text-primary-600"></iconify-icon>
                                        Booking / Tour details
                                    </h6>
                                </div>
                                <div class="card-body p-20">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <label class="form-label text-sm">Booking date</label>
                                            <input type="date" name="bookingDate" id="bookingDate" class="form-control h-56-px bg-neutral-50 radius-12" value="">
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label text-sm">Date of tour</label>
                                            <input type="date" name="dateOfTour" id="dateOfTour" class="form-control h-56-px bg-neutral-50 radius-12" value="">
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label text-sm">Number of people</label>
                                            <input type="number" name="numberOfPeople" id="numberOfPeople" class="form-control h-56-px bg-neutral-50 radius-12" placeholder="0" min="0" value="">
                                        </div>
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:door-open"></iconify-icon></span>
                                                <input type="text" name="roomNo" id="roomNo" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Room number" value="" required>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:account-check-outline"></iconify-icon></span>
                                                <input type="text" name="confirmedBy" id="confirmedBy" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Confirmed by" value="" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <hr class="my-24">
                            <div class="d-flex align-items-center justify-content-end gap-3">
                                <a href="#" id="edit-cancel-link" class="btn border border-neutral-400 bg-hover-neutral-100 text-primary-light text-md px-24 py-12 radius-8 d-flex align-items-center gap-2">
                                    <iconify-icon icon="mdi:close"></iconify-icon>
                                    Cancel
                                </a>
                                <button type="submit" class="btn btn-primary text-md px-32 py-12 radius-8 d-flex align-items-center gap-2">
                                    <iconify-icon icon="mdi:content-save-outline"></iconify-icon>
                                    Update Customer
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>

<% script = '<script src="/js/api/customerApi.js"></script><script src="/js/pages/customer-edit.js"></script>' %>
