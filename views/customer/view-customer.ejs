<div class="card h-100 p-0 radius-12" id="customer-view-root" data-customer-id="<%= typeof customerId !== 'undefined' ? customerId : '' %>" data-base-path="<%= typeof basePath !== 'undefined' ? basePath : '' %>">
    <div class="card-body p-24">
        <div id="customer-view-loading" class="text-center text-secondary-light py-24">Loading customerâ€¦</div>
        <div id="customer-view-error" class="d-none text-center text-danger py-24"></div>
        <div id="customer-view-content" class="d-none">
            <div class="row justify-content-center">
                <div class="col-xxl-10 col-xl-11 col-lg-12">
                    <!-- Customer title strip -->
                    <div class="card border radius-16 overflow-hidden mb-24 bg-primary-50 border-primary-200">
                        <div class="card-body py-24 px-24">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <div class="w-64-px h-64-px rounded-12 bg-primary-100 d-flex align-items-center justify-content-center">
                                        <iconify-icon icon="mdi:account-outline" class="text-primary-600" style="font-size: 2rem;"></iconify-icon>
                                    </div>
                                </div>
                                <div class="col">
                                    <h5 class="fw-semibold text-primary-light mb-4" data-field="name">-</h5>
                                    <p class="text-sm text-secondary-light mb-0 d-flex align-items-center gap-2">
                                        <iconify-icon icon="mdi:phone-outline"></iconify-icon>
                                        <span data-field="phone">-</span>
                                    </p>
                                    <p class="text-sm text-secondary-light mb-0 d-flex align-items-center gap-2 mt-4">
                                        <iconify-icon icon="mdi:email-outline"></iconify-icon>
                                        <span data-field="email">-</span>
                                    </p>
                                </div>
                                <div class="col-auto d-flex gap-2" id="view-actions">
                                    <a href="#" id="view-edit-link" class="btn btn-success btn-sm radius-8 d-flex align-items-center gap-2">
                                        <iconify-icon icon="lucide:edit"></iconify-icon> Edit
                                    </a>
                                    <a href="#" id="view-back-link" class="btn btn-outline-secondary btn-sm radius-8 d-flex align-items-center gap-2">
                                        <iconify-icon icon="mdi:arrow-left"></iconify-icon> Back
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3">
                        <!-- Basic Information -->
                        <div class="col-lg-6">
                            <div class="card border radius-12 h-100 overflow-hidden">
                                <div class="card-header bg-neutral-50 border-bottom py-14 px-20">
                                    <h6 class="text-sm fw-semibold text-primary-light mb-0 d-flex align-items-center gap-2">
                                        <iconify-icon icon="solar:document-text-outline" class="text-primary-600"></iconify-icon>
                                        Basic Information
                                    </h6>
                                </div>
                                <div class="card-body p-20">
                                    <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                        <span class="text-secondary-light text-sm d-flex align-items-center gap-2" style="width: 130px;"><iconify-icon icon="mdi:account-outline"></iconify-icon> Name</span>
                                        <span class="fw-medium text-primary-light" data-field="name">-</span>
                                    </div>
                                    <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                        <span class="text-secondary-light text-sm d-flex align-items-center gap-2" style="width: 130px;"><iconify-icon icon="mdi:phone-outline"></iconify-icon> Phone</span>
                                        <span class="fw-medium text-primary-light" data-field="phone">-</span>
                                    </div>
                                    <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                        <span class="text-secondary-light text-sm d-flex align-items-center gap-2" style="width: 130px;"><iconify-icon icon="mdi:email-outline"></iconify-icon> Email</span>
                                        <span class="fw-medium text-primary-light" data-field="email">-</span>
                                    </div>
                                    <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                        <span class="text-secondary-light text-sm d-flex align-items-center gap-2" style="width: 130px;"><iconify-icon icon="mdi:earth"></iconify-icon> Nationality</span>
                                        <span class="fw-medium text-primary-light" data-field="nationality">-</span>
                                    </div>
                                    <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                        <span class="text-secondary-light text-sm d-flex align-items-center gap-2" style="width: 130px;"><iconify-icon icon="mdi:card-account-details-outline"></iconify-icon> Passport</span>
                                        <span class="fw-medium text-primary-light" data-field="passportNumber">-</span>
                                    </div>
                                    <div class="vehicle-view-row d-flex align-items-center py-10">
                                        <span class="text-secondary-light text-sm d-flex align-items-center gap-2" style="width: 130px;"><iconify-icon icon="mdi:home-outline"></iconify-icon> Hotel</span>
                                        <span class="fw-medium text-primary-light" data-field="hotelName">-</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Booking / Tour details (same as add customer) -->
                        <div class="col-lg-6">
                            <div class="card border radius-12 h-100 overflow-hidden">
                                <div class="card-header bg-neutral-50 border-bottom py-14 px-20">
                                    <h6 class="text-sm fw-semibold text-primary-light mb-0 d-flex align-items-center gap-2">
                                        <iconify-icon icon="mdi:calendar-check-outline" class="text-primary-600"></iconify-icon>
                                        Booking / Tour details
                                    </h6>
                                </div>
                                <div class="card-body p-20">
                                    <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                        <span class="text-secondary-light text-sm d-flex align-items-center gap-2" style="width: 130px;">Booking date</span>
                                        <span class="fw-medium text-primary-light" data-field="bookingDate">-</span>
                                    </div>
                                    <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                        <span class="text-secondary-light text-sm d-flex align-items-center gap-2" style="width: 130px;">Date of tour</span>
                                        <span class="fw-medium text-primary-light" data-field="dateOfTour">-</span>
                                    </div>
                                    <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                        <span class="text-secondary-light text-sm d-flex align-items-center gap-2" style="width: 130px;">Number of people</span>
                                        <span class="fw-medium text-primary-light" data-field="numberOfPeople">-</span>
                                    </div>
                                    <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                        <span class="text-secondary-light text-sm d-flex align-items-center gap-2" style="width: 130px;"><iconify-icon icon="mdi:door-open"></iconify-icon> Room No</span>
                                        <span class="fw-medium text-primary-light" data-field="roomNo">-</span>
                                    </div>
                                    <div class="vehicle-view-row d-flex align-items-center py-10">
                                        <span class="text-secondary-light text-sm d-flex align-items-center gap-2" style="width: 130px;"><iconify-icon icon="mdi:account-check-outline"></iconify-icon> Confirmed by</span>
                                        <span class="fw-medium text-primary-light" data-field="confirmedBy">-</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% script = '<script src="/js/api/customerApi.js"></script><script src="/js/pages/customer-view.js"></script>' %>
