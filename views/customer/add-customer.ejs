<div class="card h-100 p-0 radius-12" data-base-path="<%= typeof basePath !== 'undefined' ? basePath : '' %>">
    <div class="card-body p-24">
        <div class="row justify-content-center">
            <div class="col-xxl-10 col-xl-11 col-lg-12">
                <div class="card border radius-12 overflow-hidden">
                    <div class="card-header bg-neutral-50 border-bottom py-16 px-24 d-flex align-items-center justify-content-between flex-wrap gap-2">
                        <h6 class="text-md text-primary-light mb-0 d-flex align-items-center gap-2">
                            <iconify-icon icon="mdi:account-plus-outline" class="text-primary-600"></iconify-icon>
                            Add Customer
                        </h6>
                    </div>
                    <div class="card-body p-24">
                        <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger radius-12 mb-24 d-flex align-items-center gap-2">
                            <iconify-icon icon="mdi:alert-circle-outline"></iconify-icon>
                            <%= error %>
                        </div>
                        <% } %>
                        <form id="customer-form" method="POST" action="#">
                            <% const c = typeof customer !== 'undefined' && customer ? customer : {}; %>
                            <% const showMinimalCustomerForm = (typeof useMinimalCustomerForm !== 'undefined' ? useMinimalCustomerForm : true); %>

                            <!-- Part 1: Basic Information -->
                            <div class="card border radius-12 overflow-hidden mb-24">
                                <div class="card-header bg-neutral-50 border-bottom py-14 px-20">
                                    <h6 class="text-sm fw-semibold text-primary-light mb-0 d-flex align-items-center gap-2">
                                        <iconify-icon icon="solar:document-text-outline" class="text-primary-600"></iconify-icon>
                                        Basic Information
                                    </h6>
                                </div>
                                <div class="card-body p-20">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:account-outline"></iconify-icon></span>
                                                <input type="text" name="name" id="name" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Full name" value="<%= c.name || '' %>" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:phone-outline"></iconify-icon></span>
                                                <input type="text" name="phone" id="phone" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Phone (unique)" value="<%= c.phone || '' %>" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:email-outline"></iconify-icon></span>
                                                <input type="email" name="email" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Email" value="<%= c.email || '' %>">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:earth"></iconify-icon></span>
                                                <input type="text" name="nationality" id="nationality" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Nationality" value="<%= c.nationality || '' %>" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:card-account-details-outline"></iconify-icon></span>
                                                <input type="text" name="passportNumber" id="passportNumber" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Passport number" value="<%= c.passportNumber || '' %>" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:home-outline"></iconify-icon></span>
                                                <input type="text" name="hotelName" id="hotelName" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Hotel name (pickup/delivery)" value="<%= c.hotelName || '' %>" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Booking / Tour details (required for API) -->
                            <div class="card border radius-12 overflow-hidden mb-24">
                                <div class="card-header bg-neutral-50 border-bottom py-14 px-20">
                                    <h6 class="text-sm fw-semibold text-primary-light mb-0 d-flex align-items-center gap-2">
                                        <iconify-icon icon="mdi:calendar-check-outline" class="text-primary-600"></iconify-icon>
                                        Booking / Tour details
                                    </h6>
                                </div>
                                <div class="card-body p-20">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <label class="form-label text-sm">Booking date</label>
                                            <input type="date" name="bookingDate" id="bookingDate" class="form-control h-56-px bg-neutral-50 radius-12" value="<%= c.bookingDate ? (typeof c.bookingDate === 'string' ? c.bookingDate.slice(0,10) : c.bookingDate.toISOString?.().slice(0,10)) : '' %>" required>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label text-sm">Date of tour</label>
                                            <input type="date" name="dateOfTour" id="dateOfTour" class="form-control h-56-px bg-neutral-50 radius-12" value="<%= c.dateOfTour ? (typeof c.dateOfTour === 'string' ? c.dateOfTour.slice(0,10) : c.dateOfTour.toISOString?.().slice(0,10)) : '' %>" required>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label text-sm">Number of people</label>
                                            <input type="number" name="numberOfPeople" id="numberOfPeople" class="form-control h-56-px bg-neutral-50 radius-12" placeholder="0" min="0" value="<%= c.numberOfPeople != null ? c.numberOfPeople : '' %>" required>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:door-open"></iconify-icon></span>
                                                <input type="text" name="roomNo" id="roomNo" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Room number" value="<%= c.roomNo || '' %>" required>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:account-check-outline"></iconify-icon></span>
                                                <input type="text" name="confirmedBy" id="confirmedBy" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Confirmed by" value="<%= c.confirmedBy || '' %>" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <% if (!showMinimalCustomerForm) { %>
                            <!-- Part 2: Personal Address -->
                            <div class="card border radius-12 overflow-hidden mb-24">
                                <div class="card-header bg-neutral-50 border-bottom py-14 px-20">
                                    <h6 class="text-sm fw-semibold text-primary-light mb-0 d-flex align-items-center gap-2">
                                        <iconify-icon icon="mdi:map-marker-outline" class="text-primary-600"></iconify-icon>
                                        Personal Address
                                    </h6>
                                </div>
                                <div class="card-body p-20">
                                    <div class="row g-3">
                                        <div class="col-12">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:home-map-marker"></iconify-icon></span>
                                                <input type="text" name="address" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Full address" value="<%= c.address || '' %>">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:postage-stamp"></iconify-icon></span>
                                                <input type="text" name="customerPincode" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Pincode / Zipcode" value="<%= c.customerPincode || '' %>">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:map-outline"></iconify-icon></span>
                                                <input type="text" name="customerState" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="State / Province" value="<%= c.customerState || '' %>">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Part 3: ID & License -->
                            <div class="card border radius-12 overflow-hidden mb-24">
                                <div class="card-header bg-neutral-50 border-bottom py-14 px-20">
                                    <h6 class="text-sm fw-semibold text-primary-light mb-0 d-flex align-items-center gap-2">
                                        <iconify-icon icon="mdi:card-account-details" class="text-primary-600"></iconify-icon>
                                        ID Proof & License
                                    </h6>
                                </div>
                                <div class="card-body p-20">
                                    <div class="row g-3">
                                        <div class="col-md-4">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:card-search-outline"></iconify-icon></span>
                                                <select name="idProofType" class="form-select h-56-px bg-neutral-50 radius-12 ps-48">
                                                    <option value="">ID proof type</option>
                                                    <option value="Aadhaar" <%= (c.idProofType || '') === 'Aadhaar' ? 'selected' : '' %>>Aadhaar</option>
                                                    <option value="Passport" <%= (c.idProofType || '') === 'Passport' ? 'selected' : '' %>>Passport</option>
                                                    <option value="GST" <%= (c.idProofType || '') === 'GST' ? 'selected' : '' %>>GST</option>
                                                    <option value="Voter ID" <%= (c.idProofType || '') === 'Voter ID' ? 'selected' : '' %>>Voter ID</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:identifier"></iconify-icon></span>
                                                <input type="text" name="idProofNumber" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="ID proof number" value="<%= c.idProofNumber || '' %>">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:car-side"></iconify-icon></span>
                                                <input type="text" name="licenseNumber" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="License number" value="<%= c.licenseNumber || '' %>">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Part 4: B2B (optional) -->
                            <div class="card border radius-12 overflow-hidden mb-24">
                                <div class="card-header bg-neutral-50 border-bottom py-14 px-20">
                                    <h6 class="text-sm fw-semibold text-primary-light mb-0 d-flex align-items-center gap-2">
                                        <iconify-icon icon="mdi:domain" class="text-primary-600"></iconify-icon>
                                        Business Customer (B2B)
                                    </h6>
                                </div>
                                <div class="card-body p-20">
                                    <div class="form-check mb-16">
                                        <input type="checkbox" name="isBusinessCustomer" class="form-check-input radius-4" id="isBusinessCustomer" value="1" <%= (c.isBusinessCustomer || c.is_business_customer) ? 'checked' : '' %>>
                                        <label class="form-check-label text-sm" for="isBusinessCustomer">This is a business customer (B2B)</label>
                                    </div>
                                    <div class="row g-3 b2b-fields">
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:identifier"></iconify-icon></span>
                                                <input type="text" name="taxIdNumber" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Tax ID (GST / TIN / EIN)" value="<%= c.taxIdNumber || c.tax_id_number || '' %>">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:tag-outline"></iconify-icon></span>
                                                <select name="taxIdType" class="form-select h-56-px bg-neutral-50 radius-12 ps-48">
                                                    <option value="">Tax ID type</option>
                                                    <option value="GST" <%= (c.taxIdType || c.tax_id_type || '') === 'GST' ? 'selected' : '' %>>GST</option>
                                                    <option value="TIN" <%= (c.taxIdType || c.tax_id_type || '') === 'TIN' ? 'selected' : '' %>>TIN</option>
                                                    <option value="VAT Number" <%= (c.taxIdType || c.tax_id_type || '') === 'VAT Number' ? 'selected' : '' %>>VAT Number</option>
                                                    <option value="Tax ID" <%= (c.taxIdType || c.tax_id_type || '') === 'Tax ID' ? 'selected' : '' %>>Tax ID</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:office-building-outline"></iconify-icon></span>
                                                <input type="text" name="businessName" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Business / Company name" value="<%= c.businessName || c.business_name || '' %>">
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:map-marker"></iconify-icon></span>
                                                <input type="text" name="customerCompanyAddress" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Company address" value="<%= c.customerCompanyAddress || c.customer_company_address || '' %>">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:postage-stamp"></iconify-icon></span>
                                                <input type="text" name="customerCompanyPincode" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Company pincode" value="<%= c.customerCompanyPincode || c.customer_company_pincode || '' %>">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="icon-field">
                                                <span class="icon top-50 translate-middle-y"><iconify-icon icon="mdi:map-outline"></iconify-icon></span>
                                                <input type="text" name="customerCompanyState" class="form-control h-56-px bg-neutral-50 radius-12 ps-48" placeholder="Company state" value="<%= c.customerCompanyState || c.customer_company_state || '' %>">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>

                            <hr class="my-24">
                            <div class="d-flex align-items-center justify-content-end gap-3">
                                <a href="#" id="add-customer-cancel-link" class="btn border border-neutral-400 bg-hover-neutral-100 text-primary-light text-md px-24 py-12 radius-8 d-flex align-items-center gap-2">
                                    <iconify-icon icon="mdi:close"></iconify-icon>
                                    Cancel
                                </a>
                                <button type="submit" class="btn btn-primary text-md px-32 py-12 radius-8 d-flex align-items-center gap-2">
                                    <iconify-icon icon="mdi:content-save-outline"></iconify-icon>
                                    Save Customer
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% script = '<script src="/js/api/customerApi.js"></script><script src="/js/modules/customer.js"></script><script src="/js/pages/customer-add.js"></script>' %>
