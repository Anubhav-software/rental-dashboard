<div class="card h-100 p-0 radius-12" data-base-path="<%= typeof basePath !== 'undefined' ? basePath : '' %>">
    <div class="card-header border-bottom bg-base py-16 px-24 d-flex align-items-center flex-wrap gap-3 justify-content-between">
        <h6 class="text-md fw-semibold text-primary-light mb-0 d-flex align-items-center gap-2">
            <iconify-icon icon="mdi:chart-areaspline" class="text-primary-600"></iconify-icon>
            Profit Report
        </h6>
        <form method="GET" action="<%= typeof basePath !== 'undefined' ? basePath : '' %>/reports/profit" class="d-flex align-items-center gap-2 flex-wrap" id="profit-report-form">
            <input type="date" name="from" id="profit-report-from" class="form-control form-control-sm w-auto h-40-px radius-12" value="<%= from %>" aria-label="From date">
            <input type="date" name="to" id="profit-report-to" class="form-control form-control-sm w-auto h-40-px radius-12" value="<%= to %>" aria-label="To date">
            <button type="submit" class="btn btn-sm btn-primary radius-8 h-40-px">Apply</button>
        </form>
    </div>
    <div class="card-body p-24">
        <p class="text-sm text-secondary-light mb-16" id="profit-report-period">Period: <%= from %> to <%= to %></p>
        <div class="row g-3 mb-24">
            <div class="col-md-4">
                <div class="card border radius-12 bg-success-50 border-success-200">
                    <div class="card-body py-20 px-20">
                        <span class="text-sm text-secondary-light">Revenue</span>
                        <h5 id="profit-report-revenue" class="fw-semibold text-success-600 mb-0 mt-4"><%= currencySymbol %>0</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border radius-12 bg-danger-50 border-danger-200">
                    <div class="card-body py-20 px-20">
                        <span class="text-sm text-secondary-light">Expenses</span>
                        <h5 id="profit-report-expenses" class="fw-semibold text-danger-600 mb-0 mt-4"><%= currencySymbol %>0</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border radius-12 bg-primary-50 border-primary-200" id="profit-report-profit-card">
                    <div class="card-body py-20 px-20">
                        <span class="text-sm text-secondary-light">Net Profit</span>
                        <h5 id="profit-report-profit" class="fw-semibold text-primary-600 mb-0 mt-4"><%= currencySymbol %>0</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex gap-2 flex-wrap mb-24">
            <a href="#" id="profit-report-revenue-link" class="btn btn-outline-primary btn-sm radius-8">Revenue detail</a>
            <a href="#" id="profit-report-expense-link" class="btn btn-outline-danger btn-sm radius-8">Expense detail</a>
        </div>
        <div class="mt-24 pt-24 border-top">
            <div class="d-flex align-items-center flex-wrap gap-2 justify-content-between mb-16">
                <h6 class="text-md fw-semibold text-primary-light mb-0">Profit by month</h6>
                <select id="profit-report-year" class="form-select form-select-sm w-auto bg-base border text-secondary-light" aria-label="Year for chart"></select>
            </div>
            <div id="profit-report-chart"></div>
        </div>
    </div>
</div>

</div>


</div>
