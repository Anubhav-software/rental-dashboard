<div class="card h-100 p-0 radius-12">
    <div class="card-header border-bottom bg-base py-16 px-24 d-flex align-items-center flex-wrap gap-3 justify-content-between">
        <h6 class="text-md fw-semibold text-primary-light mb-0 d-flex align-items-center gap-2">
            <iconify-icon icon="solar:calendar-outline" class="text-primary-600"></iconify-icon>
            Rentals on <%= dateStr %>
        </h6>
        <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/calendar" class="btn btn-outline-secondary btn-sm radius-8 d-flex align-items-center gap-2">
            <iconify-icon icon="mdi:arrow-left"></iconify-icon> Back to calendar
        </a>
    </div>
    <div class="card-body p-24">
        <% if (rentals.length === 0) { %>
        <div class="text-center text-secondary-light py-32">
            <iconify-icon icon="mdi:calendar-blank-outline" class="text-4xl mb-3 d-block text-neutral-400"></iconify-icon>
            <p class="mb-0">No rentals on this date.</p>
            <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/rental/add" class="btn btn-outline-primary btn-sm mt-16 radius-8">Create rental</a>
        </div>
        <% } else { %>
        <div class="table-responsive scroll-sm">
            <table class="table bordered-table sm-table mb-0">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Contract</th>
                        <th scope="col">Customer</th>
                        <th scope="col">Vehicle</th>
                        <th scope="col">Start — End</th>
                        <th scope="col">Status</th>
                        <th scope="col" class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% rentals.forEach((r, i) => { %>
                    <% const cust = customersMap[r.customerId]; const veh = vehiclesMap[r.vehicleId]; %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><span class="text-md fw-medium text-primary-light"><%= r.contractNumber %></span></td>
                        <td><span class="text-md fw-normal text-secondary-light"><%= cust ? cust.name : '-' %></span></td>
                        <td><span class="text-md fw-normal text-secondary-light"><%= veh ? (veh.make + ' ' + veh.model) : '-' %></span></td>
                        <td><span class="text-md fw-normal text-secondary-light"><%= r.startDate %> — <%= r.endDate %></span></td>
                        <td>
                            <% if (r.status === 'ACTIVE') { %>
                            <span class="bg-success-focus text-success-600 border border-success-main px-16 py-4 radius-4 fw-medium text-sm">Active</span>
                            <% } else if (r.status === 'COMPLETED') { %>
                            <span class="bg-info-focus text-info-600 border border-info-main px-16 py-4 radius-4 fw-medium text-sm">Completed</span>
                            <% } else { %>
                            <span class="bg-neutral-200 text-neutral-600 border border-neutral-400 px-16 py-4 radius-4 fw-medium text-sm">Cancelled</span>
                            <% } %>
                        </td>
                        <td class="text-center">
                            <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/rental/view/<%= r.id %>" class="btn btn-sm btn-outline-primary radius-8">View</a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <% } %>
    </div>
</div>
