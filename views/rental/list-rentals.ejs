<div class="card h-100 p-0 radius-12" id="rental-list-card" data-base-path="<%= typeof basePath !== 'undefined' ? basePath : '' %>" data-page="<%= query.page %>" data-limit="<%= query.limit %>" data-status="<%= query.status || '' %>" data-active-only="<%= activeOnly ? '1' : '0' %>" data-start-date-from="<%= query.start_date_from || '' %>" data-start-date-to="<%= query.start_date_to || '' %>">
    <div class="card-header border-bottom bg-base py-16 px-24 d-flex align-items-center flex-wrap gap-3 justify-content-between">
        <div class="d-flex align-items-center flex-wrap gap-3">
            <% if (!activeOnly) { %>
            <select id="rental-filter-status" class="form-select form-select-sm w-auto ps-12 py-6 radius-12 h-40-px" title="Filter by status">
                <option value="">All status</option>
                <option value="ACTIVE" <%= query.status === 'ACTIVE' ? 'selected' : '' %>>Active</option>
                <option value="COMPLETED" <%= query.status === 'COMPLETED' ? 'selected' : '' %>>Completed</option>
                <option value="CANCELLED" <%= query.status === 'CANCELLED' ? 'selected' : '' %>>Cancelled</option>
            </select>
            <input type="date" id="rental-filter-start-from" class="form-control form-control-sm w-auto py-6 radius-12 h-40-px" placeholder="From" value="<%= query.start_date_from || '' %>" title="Start date from">
            <input type="date" id="rental-filter-start-to" class="form-control form-control-sm w-auto py-6 radius-12 h-40-px" placeholder="To" value="<%= query.start_date_to || '' %>" title="Start date to">
            <button type="button" id="rental-filter-apply" class="btn btn-sm border border-neutral-400 radius-8 h-40-px">Apply</button>
            <% } %>
        </div>
        <div class="d-flex align-items-center gap-2">
            <% if (activeOnly) { %>
            <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/rental" class="btn border border-neutral-400 bg-hover-neutral-100 text-primary-light text-sm btn-sm px-12 py-12 radius-8 d-flex align-items-center gap-2">
                <iconify-icon icon="mdi:format-list-bulleted" class="icon text-xl line-height-1"></iconify-icon>
                All rentals
            </a>
            <% } else { %>
            <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/rental/active" class="btn border border-neutral-400 bg-hover-neutral-100 text-primary-light text-sm btn-sm px-12 py-12 radius-8 d-flex align-items-center gap-2">
                <iconify-icon icon="mdi:clock-outline" class="icon text-xl line-height-1"></iconify-icon>
                Active only
            </a>
            <% } %>
            <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/rental/add" class="btn btn-primary text-sm btn-sm px-12 py-12 radius-8 d-flex align-items-center gap-2">
                <iconify-icon icon="ic:baseline-plus" class="icon text-xl line-height-1"></iconify-icon>
                Create Rental
            </a>
        </div>
    </div>
    <div class="card-body p-24">
        <div id="rental-list-loading" class="text-center text-secondary-light py-24">Loading rentalsâ€¦</div>
        <div id="rental-list-content" class="d-none">
            <div class="table-responsive scroll-sm">
                <table class="table bordered-table sm-table mb-0">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Contract</th>
                            <th scope="col">Customer</th>
                            <th scope="col">Vehicle</th>
                            <th scope="col">Start</th>
                            <th scope="col">End</th>
                            <th scope="col">Total</th>
                            <th scope="col" class="text-center">Status</th>
                            <th scope="col" class="text-center text-nowrap">
                                <span class="d-inline-flex align-items-center gap-1" title="Send reminder via Email">
                                    <iconify-icon icon="mdi:email-outline" class="text-primary"></iconify-icon>
                                    <span class="text-sm fw-medium">Email</span>
                                </span>
                            </th>
                            <th scope="col" class="text-center text-nowrap">
                                <span class="d-inline-flex align-items-center gap-1" title="Send reminder via WhatsApp">
                                    <iconify-icon icon="mdi:whatsapp" class="text-success"></iconify-icon>
                                    <span class="text-sm fw-medium">WhatsApp</span>
                                </span>
                            </th>
                            <th scope="col" class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody id="rental-list-tbody">
                    </tbody>
                </table>
            </div>
            <div id="rental-list-pagination" class="d-flex align-items-center justify-content-between mt-16 flex-wrap gap-2">
            </div>
        </div>
        <div id="rental-list-error" class="d-none text-center text-danger py-24"></div>
    </div>
</div>

<% script = '<script src="/js/api/rentalApi.js"></script><script src="/js/pages/rental-list.js"></script>' %>
