<div class="card h-100 p-0 radius-12">
    <div class="card-body p-24">
        <div class="row justify-content-center">
            <div class="col-xxl-10 col-xl-11 col-lg-12">
                <% const r = rental; %>

                <% if (typeof query !== 'undefined' && query && query.returned === '1') { %>
                <div class="alert alert-success radius-12 mb-24 d-flex align-items-center gap-2">
                    <iconify-icon icon="mdi:check-circle-outline"></iconify-icon>
                    Return processed. Vehicle is now available.
                </div>
                <% } %>

                <!-- Contract hero -->
                <div class="card border radius-16 overflow-hidden mb-24 bg-primary-50 border-primary-200">
                    <div class="card-body py-24 px-24">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <div class="w-64-px h-64-px rounded-12 bg-primary-100 d-flex align-items-center justify-content-center">
                                    <iconify-icon icon="mdi:file-document-outline" class="text-primary-600" style="font-size: 2rem;"></iconify-icon>
                                </div>
                            </div>
                            <div class="col">
                                <h5 class="fw-semibold text-primary-light mb-4">Contract <%= r.contractNumber %></h5>
                                <p class="text-sm text-secondary-light mb-0">
                                    <%= customer ? customer.name : 'Customer' %> · <%= vehicle ? (vehicle.make + ' ' + vehicle.model) : 'Vehicle' %>
                                </p>
                                <p class="text-sm text-secondary-light mb-0 mt-4">
                                    <%= r.startDate %> <%= r.startTime %> — <%= r.endDate %> <%= r.endTime %>
                                </p>
                            </div>
                            <div class="col-auto">
                                <% if (r.status === 'ACTIVE') { %>
                                <span class="bg-success-focus text-success-600 border border-success-main px-20 py-8 radius-8 fw-medium text-sm">Active</span>
                                <% } else if (r.status === 'COMPLETED') { %>
                                <span class="bg-info-focus text-info-600 border border-info-main px-20 py-8 radius-8 fw-medium text-sm">Completed</span>
                                <% } else { %>
                                <span class="bg-neutral-200 text-neutral-600 border border-neutral-400 px-20 py-8 radius-8 fw-medium text-sm">Cancelled</span>
                                <% } %>
                            </div>
                            <div class="col-auto d-flex gap-2">
                                <% if (r.status === 'ACTIVE') { %>
                                <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/return/process/<%= r.id %>" class="btn btn-primary btn-sm radius-8 d-flex align-items-center gap-2">
                                    <iconify-icon icon="mdi:backup-restore"></iconify-icon> Process return
                                </a>
                                <% } %>
                                <button type="button" class="btn btn-outline-secondary btn-sm radius-8 d-flex align-items-center gap-2" onclick="window.print()">
                                    <iconify-icon icon="mdi:printer-outline"></iconify-icon> Print
                                </button>
                                <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/rental" class="btn btn-outline-secondary btn-sm radius-8 d-flex align-items-center gap-2">
                                    <iconify-icon icon="mdi:arrow-left"></iconify-icon> Back
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row g-3">
                    <!-- Rental details -->
                    <div class="col-lg-6">
                        <div class="card border radius-12 h-100 overflow-hidden">
                            <div class="card-header bg-neutral-50 border-bottom py-14 px-20">
                                <h6 class="text-sm fw-semibold text-primary-light mb-0 d-flex align-items-center gap-2">
                                    <iconify-icon icon="solar:calendar-outline" class="text-primary-600"></iconify-icon>
                                    Rental Period & Rate
                                </h6>
                            </div>
                            <div class="card-body p-20">
                                <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                    <span class="text-secondary-light text-sm" style="width: 140px;">Start</span>
                                    <span class="fw-medium text-primary-light"><%= r.startDate %> <%= r.startTime %></span>
                                </div>
                                <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                    <span class="text-secondary-light text-sm" style="width: 140px;">End</span>
                                    <span class="fw-medium text-primary-light"><%= r.endDate %> <%= r.endTime %></span>
                                </div>
                                <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                    <span class="text-secondary-light text-sm" style="width: 140px;">Charge method</span>
                                    <span class="fw-medium text-primary-light"><%= r.selectedChargeMethod %></span>
                                </div>
                                <% if (r.totalDays != null) { %>
                                <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                    <span class="text-secondary-light text-sm" style="width: 140px;">Total days</span>
                                    <span class="fw-medium text-primary-light"><%= r.totalDays %></span>
                                </div>
                                <% } %>
                                <% if (r.totalHours != null) { %>
                                <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                    <span class="text-secondary-light text-sm" style="width: 140px;">Total hours</span>
                                    <span class="fw-medium text-primary-light"><%= r.totalHours %></span>
                                </div>
                                <% } %>
                                <div class="vehicle-view-row d-flex align-items-center py-10">
                                    <span class="text-secondary-light text-sm" style="width: 140px;">Rate (snapshot)</span>
                                    <span class="fw-medium text-primary-light"><%= r.currencySymbol %><%= r.dailyRate %>/day<% if (r.hourlyRate != null) { %>, <%= r.currencySymbol %><%= r.hourlyRate %>/hr<% } %></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Payment summary -->
                    <div class="col-lg-6">
                        <div class="card border radius-12 h-100 overflow-hidden">
                            <div class="card-header bg-neutral-50 border-bottom py-14 px-20">
                                <h6 class="text-sm fw-semibold text-primary-light mb-0 d-flex align-items-center gap-2">
                                    <iconify-icon icon="mdi:cash-multiple" class="text-primary-600"></iconify-icon>
                                    Payment Summary
                                </h6>
                            </div>
                            <div class="card-body p-20">
                                <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                    <span class="text-secondary-light text-sm" style="width: 140px;">Total amount</span>
                                    <span class="fw-semibold text-primary-light"><%= r.currencySymbol %><%= r.totalAmount %></span>
                                </div>
                                <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                    <span class="text-secondary-light text-sm" style="width: 140px;">Advance paid</span>
                                    <span class="fw-medium text-primary-light"><%= r.currencySymbol %><%= r.advancePaid %></span>
                                </div>
                                <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                    <span class="text-secondary-light text-sm" style="width: 140px;">Deposit</span>
                                    <span class="fw-medium text-primary-light"><%= r.currencySymbol %><%= r.deposit %></span>
                                </div>
                                <div class="vehicle-view-row d-flex align-items-center py-10">
                                    <span class="text-secondary-light text-sm" style="width: 140px;">Balance</span>
                                    <span class="fw-medium text-primary-light"><%= r.currencySymbol %><%= r.balanceAmount %></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <% if (r.status === 'COMPLETED' && (r.actualReturnDate || r.totalChargesAtReturn != null)) { %>
                    <!-- Return settlement -->
                    <div class="col-12">
                        <div class="card border radius-12 overflow-hidden border-success-200 bg-success-50">
                            <div class="card-header bg-success-100 border-bottom py-14 px-20">
                                <h6 class="text-sm fw-semibold text-primary-light mb-0 d-flex align-items-center gap-2">
                                    <iconify-icon icon="mdi:backup-restore" class="text-success-600"></iconify-icon>
                                    Return settlement
                                </h6>
                            </div>
                            <div class="card-body p-20">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <span class="text-secondary-light text-sm">Actual return</span>
                                        <p class="fw-medium text-primary-light mb-0"><%= r.actualReturnDate %> <%= r.actualReturnTime || '' %></p>
                                    </div>
                                    <% if (r.lateReturnFee != null && r.lateReturnFee > 0) { %>
                                    <div class="col-md-4">
                                        <span class="text-secondary-light text-sm">Late return fee</span>
                                        <p class="fw-medium text-primary-light mb-0"><%= r.currencySymbol %><%= r.lateReturnFee %></p>
                                    </div>
                                    <% } %>
                                    <div class="col-md-4">
                                        <span class="text-secondary-light text-sm">Total charges at return</span>
                                        <p class="fw-medium text-primary-light mb-0"><%= r.currencySymbol %><%= r.totalChargesAtReturn != null ? r.totalChargesAtReturn : 0 %></p>
                                    </div>
                                    <div class="col-md-4">
                                        <span class="text-secondary-light text-sm">Deposit deduction</span>
                                        <p class="fw-medium text-primary-light mb-0"><%= r.currencySymbol %><%= r.depositDeduction != null ? r.depositDeduction : 0 %></p>
                                    </div>
                                    <div class="col-md-4">
                                        <span class="text-secondary-light text-sm">Deposit refund</span>
                                        <p class="fw-semibold text-success-600 mb-0"><%= r.currencySymbol %><%= r.depositRefundAmount != null ? r.depositRefundAmount : 0 %></p>
                                    </div>
                                    <% if (r.additionalPaymentRequired != null && r.additionalPaymentRequired > 0) { %>
                                    <div class="col-md-4">
                                        <span class="text-secondary-light text-sm">Additional payment required</span>
                                        <p class="fw-semibold text-danger-600 mb-0"><%= r.currencySymbol %><%= r.additionalPaymentRequired %></p>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>

                    <!-- Customer (snapshot) -->
                    <div class="col-lg-6">
                        <div class="card border radius-12 h-100 overflow-hidden">
                            <div class="card-header bg-neutral-50 border-bottom py-14 px-20">
                                <h6 class="text-sm fw-semibold text-primary-light mb-0 d-flex align-items-center gap-2">
                                    <iconify-icon icon="mdi:account-outline" class="text-primary-600"></iconify-icon>
                                    Customer
                                </h6>
                            </div>
                            <div class="card-body p-20">
                                <% if (customer) { %>
                                <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                    <span class="text-secondary-light text-sm" style="width: 100px;">Name</span>
                                    <span class="fw-medium text-primary-light"><%= customer.name %></span>
                                </div>
                                <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                    <span class="text-secondary-light text-sm" style="width: 100px;">Phone</span>
                                    <span class="fw-medium text-primary-light"><%= customer.phone %></span>
                                </div>
                                <% if (customer.email) { %>
                                <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                    <span class="text-secondary-light text-sm" style="width: 100px;">Email</span>
                                    <span class="fw-medium text-primary-light"><%= customer.email %></span>
                                </div>
                                <% } %>
                                <div class="vehicle-view-row d-flex align-items-center py-10">
                                    <span class="text-secondary-light text-sm" style="width: 100px;">Address</span>
                                    <span class="fw-medium text-primary-light"><%= customer.address || '-' %></span>
                                </div>
                                <% } else { %>
                                <p class="text-secondary-light text-sm mb-0">Customer data not found.</p>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Vehicle (snapshot) -->
                    <div class="col-lg-6">
                        <div class="card border radius-12 h-100 overflow-hidden">
                            <div class="card-header bg-neutral-50 border-bottom py-14 px-20">
                                <h6 class="text-sm fw-semibold text-primary-light mb-0 d-flex align-items-center gap-2">
                                    <iconify-icon icon="mdi:car-outline" class="text-primary-600"></iconify-icon>
                                    Vehicle
                                </h6>
                            </div>
                            <div class="card-body p-20">
                                <% if (vehicle) { %>
                                <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                    <span class="text-secondary-light text-sm" style="width: 120px;">Make / Model</span>
                                    <span class="fw-medium text-primary-light"><%= vehicle.make %> <%= vehicle.model %></span>
                                </div>
                                <div class="vehicle-view-row d-flex align-items-center py-10 border-bottom border-neutral-200">
                                    <span class="text-secondary-light text-sm" style="width: 120px;">Registration</span>
                                    <span class="fw-medium text-primary-light"><%= vehicle.registrationNumber %></span>
                                </div>
                                <div class="vehicle-view-row d-flex align-items-center py-10">
                                    <span class="text-secondary-light text-sm" style="width: 120px;">Type / Year</span>
                                    <span class="fw-medium text-primary-light"><%= (vehicle.vehicleType || 'CAR') === 'MOTORBIKE' ? 'Motorbike' : 'Car' %> · <%= vehicle.year || '-' %></span>
                                </div>
                                <% } else { %>
                                <p class="text-secondary-light text-sm mb-0">Vehicle data not found.</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <% if (r.status === 'ACTIVE') { %>
                <div class="mt-24 d-flex justify-content-end">
                    <form action="<%= typeof basePath !== 'undefined' ? basePath : '' %>/rental/delete/<%= r.id %>" method="POST" class="rental-delete-form d-inline">
                        <button type="submit" class="btn btn-outline-danger btn-sm radius-8 d-flex align-items-center gap-2">
                            <iconify-icon icon="fluent:delete-24-regular"></iconify-icon> Cancel rental
                        </button>
                    </form>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<% script = `
<script src="/js/modules/rental.js"></script>
` %>
