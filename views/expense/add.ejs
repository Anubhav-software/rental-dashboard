<div class="card" id="expense-add-card" data-base-path="<%= typeof basePath !== 'undefined' ? basePath : '' %>">
    <div class="card-header border-bottom py-16 px-24 d-flex align-items-center justify-content-between">
        <h5 class="mb-0 fw-semibold text-primary-light">Add Expense</h5>
        <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/expense/list" class="btn btn-sm border border-neutral-400 radius-8">Back to list</a>
    </div>
    <div class="card-body p-24">
        <div id="expense-add-content">
            <form id="expense-add-form" class="max-w-600">
                <div class="mb-16">
                    <label class="form-label">Amount <span class="text-danger">*</span></label>
                    <input type="number" name="amount" id="expense-add-amount" class="form-control" min="0" step="0.01" required placeholder="0.00">
                </div>
                <div class="mb-16">
                    <label class="form-label">Category <span class="text-danger">*</span></label>
                    <select name="category" id="expense-add-category" class="form-select" required>
                        <option value="">Select category</option>
                        <option value="FUEL">Fuel</option>
                        <option value="MAINTENANCE">Maintenance</option>
                        <option value="INSURANCE">Insurance</option>
                        <option value="REPAIR">Repair</option>
                        <option value="OFFICE">Office</option>
                        <option value="OTHER">Other</option>
                    </select>
                </div>
                <div class="mb-16">
                    <label class="form-label">Vehicle <span class="text-danger">*</span></label>
                    <select name="vehicle_id" id="expense-add-vehicle-id" class="form-select" required>
                        <option value="">Select vehicle</option>
                    </select>
                </div>
                <div class="mb-16">
                    <label class="form-label">Description <span class="text-danger">*</span></label>
                    <textarea name="description" id="expense-add-description" class="form-control" rows="3" required placeholder="Brief description"></textarea>
                </div>
                <div class="mb-16">
                    <label class="form-label">Expense date <span class="text-danger">*</span></label>
                    <input type="date" name="expense_date" id="expense-add-expense-date" class="form-control" required>
                </div>
                <div class="mb-16">
                    <label class="form-label">Status</label>
                    <select name="status" id="expense-add-status" class="form-select">
                        <option value="PENDING" selected>Pending</option>
                        <option value="APPROVED">Approved</option>
                    </select>
                    <small class="text-secondary-light text-sm">Pending requires owner approval; Approved is final.</small>
                </div>
                <div class="mb-16">
                    <label class="form-label">Receipt photo (optional)</label>
                    <input type="file" name="receipt" id="expense-add-receipt" class="form-control" accept="image/*,application/pdf" title="Image or PDF, max 5MB">
                    <small class="text-secondary-light text-sm">Image (JPEG, PNG, GIF, WebP) or PDF, max 5MB</small>
                </div>
                <button type="submit" class="btn btn-primary radius-8" id="expense-add-submit">Create expense</button>
            </form>
        </div>
        <div id="expense-add-error" class="d-none text-center text-danger py-24"></div>
    </div>
</div>

<% script = '<script src="/js/lib/searchable-select.js"></script><script src="/js/api/vehicleApi.js"></script><script src="/js/api/expenseApi.js"></script><script src="/js/pages/expense-add.js"></script>' %>
