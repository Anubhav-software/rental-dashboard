<div class="card" id="expense-edit-card" data-expense-id="<%= typeof expenseId !== 'undefined' ? expenseId : '' %>" data-base-path="<%= typeof basePath !== 'undefined' ? basePath : '' %>">
    <div class="card-header border-bottom py-16 px-24 d-flex align-items-center justify-content-between">
        <h5 class="mb-0 fw-semibold text-primary-light">Edit Expense</h5>
        <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/expense/list" class="btn btn-sm border border-neutral-400 radius-8">Back to list</a>
    </div>
    <div class="card-body p-24">
        <div id="expense-edit-loading" class="text-center text-secondary-light py-24">Loading expenseâ€¦</div>
        <div id="expense-edit-blocked" class="d-none text-center py-24">
            <p class="text-secondary-light mb-16">This expense is approved and cannot be edited.</p>
            <a href="#" id="expense-edit-view-link" class="btn btn-primary btn-sm radius-8">View expense</a>
        </div>
        <div id="expense-edit-content" class="d-none">
            <form id="expense-edit-form" class="max-w-600">
                <div class="mb-16">
                    <label class="form-label">Amount <span class="text-danger">*</span></label>
                    <input type="number" name="amount" id="expense-edit-amount" class="form-control" min="0" step="0.01" required placeholder="0.00">
                </div>
                <div class="mb-16">
                    <label class="form-label">Category <span class="text-danger">*</span></label>
                    <select name="category" id="expense-edit-category" class="form-select" required>
                        <option value="">Select category</option>
                        <option value="FUEL">Fuel</option>
                        <option value="MAINTENANCE">Maintenance</option>
                        <option value="INSURANCE">Insurance</option>
                        <option value="REPAIR">Repair</option>
                        <option value="OFFICE">Office</option>
                        <option value="OTHER">Other</option>
                    </select>
                </div>
                <div class="mb-16">
                    <label class="form-label">Vehicle <span class="text-danger">*</span></label>
                    <select name="vehicle_id" id="expense-edit-vehicle-id" class="form-select" required>
                        <option value="">Select vehicle</option>
                    </select>
                </div>
                <div class="mb-16">
                    <label class="form-label">Description <span class="text-danger">*</span></label>
                    <textarea name="description" id="expense-edit-description" class="form-control" rows="3" required placeholder="Brief description"></textarea>
                </div>
                <div class="mb-16">
                    <label class="form-label">Expense date <span class="text-danger">*</span></label>
                    <input type="date" name="expense_date" id="expense-edit-expense-date" class="form-control" required>
                </div>
                <div class="mb-16">
                    <span class="text-secondary-light text-sm">Status: </span>
                    <span id="expense-edit-status-badge" class="badge bg-warning">Pending</span>
                    <small class="d-block text-secondary-light text-sm mt-1">Approved expenses cannot be edited.</small>
                </div>
                <button type="submit" class="btn btn-primary radius-8" id="expense-edit-submit">Update expense</button>
            </form>
        </div>
        <div id="expense-edit-error" class="d-none text-center text-danger py-24"></div>
    </div>
</div>

<% script = '<script src="/js/lib/searchable-select.js"></script><script src="/js/api/vehicleApi.js"></script><script src="/js/api/expenseApi.js"></script><script src="/js/pages/expense-edit.js"></script>' %>
